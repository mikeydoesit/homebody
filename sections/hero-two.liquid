{
  "name": "Hero Two",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Background"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Background"
